{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>Sale Stats</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-lg-2 col-md-2 col-sm-4"><div class="tile tile-primary">
                <div class="tile-heading">
                    Total Monthly Sale
                </div>
                <div class="tile-body">
                    <i class="fa fa-shopping-cart"></i>
                    <h2 class="pull-right">{{ total_monthly }}$</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4"><div class="tile tile-primary">
                <div class="tile-heading">
                    Last 30 Days Sale
                </div>
                <div class="tile-body">
                    <i class="fa fa-shopping-cart"></i>
                    <h2 class="pull-right">{{ total_30 }}$</h2>
                </div>
            </div>
        </div>
    </div>
{{ footer }}